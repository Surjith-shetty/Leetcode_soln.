int peakIndexInMountainArray(int* arr, int arrSize) {
    int start=1;
    int end=arrSize-2;

    while(start<=end)
    {
        int mid=(start+end)/2;
        if(arr[mid]>arr[mid+1] && arr[mid]>arr[mid-1])
            return mid;

        else if(arr[mid]>arr[mid-1])
        {
            start=mid+1;
        }

        else
        {
            end=mid-1;
        }
    }
    return 0;
}
