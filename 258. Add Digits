int addDigits(int num) 
{
    int sum=num;
    int i=1;
    
    while(1)
    {
        if(sum/10==0)
        break;

        num=sum;
        sum=0;
    
        while(1)
        {
            if(num==0)
            break;
            sum+=num%10;
            num/=10;
        }
        
    }
    return sum;
}
