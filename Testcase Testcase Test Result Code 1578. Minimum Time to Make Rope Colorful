int minCost(char* colors, int* neededTime, int neededTimeSize) {
    int time = 0;
    int i, j;
    int n = strlen(colors);
    neededTimeSize = 0;
    for (i = 0, j = 1; j < n;)
    {
        if(colors[i]==colors[j])
        {
            if(neededTime[i]<neededTime[j])
            {
                time+=neededTime[i];
                i=j;
                j++;
            }
            else
            {
                time+=neededTime[j];
                j++;
            }
        } 
        else
        {
            i=j;
            j++;
        }
    }
    return time;
}
